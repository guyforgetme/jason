{
	"$schema": "https://playground.wordpress.net/blueprint-schema.json",	
	"landingPage": "/wp-admin/admin.php?page=twentig",
	"features": {
		"networking": true
	},
	"steps": [
		{
			"step": "login"
		},
		{
            "step": "setSiteOptions",
            "options": {
                "blogname": "Playground"
            }
        },
		{
			"step": "installPlugin",
			"pluginZipFile": {
				"resource": "wordpress.org/plugins",
				"slug": "twentig"
			},
			"options": {
				"activate": true
			}
		},
		{
            "step": "installTheme",
            "themeZipFile": {
                "resource": "url",
                "url": "https://github.com/guyforgetme/jason/releases/download/1.0/furikake.zip"
            }
        }
	]
}
